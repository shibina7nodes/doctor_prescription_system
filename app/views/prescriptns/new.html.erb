<div class="container" align = "center" style = "padding-top: 150px";>
  <%= nested_form_for(@prescriptn) do |f| %>
  <div class="form-group">
    <%= f.label :"Prescription Date:" %>
    <%= f.date_field :pres_date %>
  </div>
    <div class="form-group">
      <%= f.label :"Doctor Name:"  %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <%= f.select(:doctor_id) do %>
    <% @doctor.each do |doctor| %>
      <%= content_tag(:option, doctor.d_name, value: doctor.id) %>
    <% end %>
  <% end %>
    </div>
    <div class="field">
    <%= f.label :"Patient Name:" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <%= f.select(:patient_id) do %>
    <% @patient.each do |patient| %>
      <%= content_tag(:option, patient.p_name, value: patient.id) %>
    <% end %>
  <% end %>
  </div>
  <div class="form-group">
    <%= f.label :"Patient reason:" %>
    <%= f.text_field :patient_reason %>
  </div>
    <div class="form-group">
    <h4>Prescription details</h4>
    <%= f.fields_for :prescriptn_details do |prescriptn_detail| %>
      <div class = "prescriptn_detail_fields" id="tasks" >
       <div class = "field">
        <%= prescriptn_detail.label :"Medicine_name" %>
        <%= prescriptn_detail.text_field :medicine_name %>
        <%= prescriptn_detail.label :"Medicine count" %>
        <%= prescriptn_detail.text_field :medicine_count %>
        <%= prescriptn_detail.label :"Medicine days" %>
        <%= prescriptn_detail.text_field :days %>
        <%= prescriptn_detail.label :"Medicine times" %>
        <%= prescriptn_detail.text_field :tyms %>
     
       </div>
      </div>
    <% end %>
    <p><%= f.link_to_add "Add a Medicine", :prescriptn_details, class: "btn btn-success" %></p>
    </div>
    <br>
     <%= f.submit "Add prescriptn", class: "btn btn-primary" %>
      
  <% end %>
</div>
