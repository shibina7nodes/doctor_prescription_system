<body id="body_logo">
 <main class="login_content">
   <header class="login_header">
   <div class="login_logo">
     <%= image_tag("LOGIN-BUTTON", size: "300x102") %>
   </div> <h1 class="login_title"> Log in using <br> user id & password </header>
 </main>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
  <span id="reauth-email" class="reauth-email"></span>

  <%= f.label :"Email Id:" %>
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", id: "txtbox" %>
  <%= f.label :"Password" %>
  <%= f.password_field :password, autocomplete: "off", autofocus: true, class: "form-control", placeholder: "password", id: "txtbox"  %>

  <br>

  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>

  <br>
  <%= render "devise/shared/links" %><br>
  <%= f.submit "Log in", class: "button button_login" %>
<% end %>

</body>
</html> 
